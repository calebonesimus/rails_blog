<% content_for :header do %>
  <%= render(:partial => "jumbo_content" ,
             :locals => { :title => "All Authors",
                          :summary => "Some of thems suck."}) %>
<% end %>


<div class="container">
  <div class="row">
    <% @authors.each do |author| %>
      <div>
        <h3><%= link_to author.name, author_path(:id => author.id) %></h3>
        <p><%= author.bio %></p>
      </div>
    <% end %>
  </div>
</div>
